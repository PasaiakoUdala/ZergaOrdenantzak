    </ul>
{% endblock %}

{% block body %}
    <div class="row">&nbsp;</div>

    <div class="row ordenantza well">
        <div class="col-xs-12">
        {% if app.request.locale == 'eu'%}
                <h2>{{ ordenantza.kodea ~ "." ~ ordenantza.izenburuaeu }}</h2>
        {% else %}
                <h2>{{ ordenantza.kodea ~ "." ~ ordenantza.izenburuaes }}</h2>
        {% endif %}
        </div>
    </div>

    {#<div class="row">&nbsp;</div>#}
    {% for p in ordenantza.parrafoak %}
        <div class="row ordenantzaparrafoa text-justify">
            <div class="col-xs-12">
                {% if app.request.locale == 'eu'%}
                    {{ p.testuaeu|raw }}
                {% else %}
                    {{ p.testuaes|raw }}
                {% endif %}
            </div>
        </div>
    {% endfor %}

    {#<div class="row">&nbsp;</div>#}
    {% for atala in ordenantza.atalak %}
        {% if atala.utsa != 1 %}
            <div class="row atala">
                {% if app.request.locale == 'eu'%}
                    <div class="col-xs-12 well"><h3>{{ atala.ordenantza.kodea }}-{{ atala.kodea }}.{{ atala.izenburuaeu }}</h3></div>
                {% else %}
                    <div class="col-xs-12 well"><h3>{{ atala.ordenantza.kodea }}-{{ atala.kodea }}.{{ atala.izenburuaes }}</h3></div>
                {% endif %}
            </div>
            {% for p in atala.parrafoak  if p.ezabatu!= 1 %}
            <div class="row atalaparrafoa">
                {% if app.request.locale == 'eu'%}
                    <div class="col-xs-12">{{ p.testuaeu | raw }}</div>
                {% else %}
                    <div class="col-xs-12">{{ p.testuaeu | raw }}</div>
                {% endif %}
            </div>
            {% endfor %}
        {% endif %}

        {# Naiz eta Atalik ez izan, azpiatalak izan ditzake. Atala utsa=1 delarik:#}
            {#<div class="row">&nbsp;</div>#}

        {% for azpiatala in atala.azpiatalak %}
            <div class="row col-xs-10">
            <table class="table table-responsive table-bordered col-xs-6">
                <th colspan="12" class="row-fluid col-xs-12 well">
                    {% if app.request.locale == 'eu'%}
                        {{ azpiatala.kodea }}.-{{ azpiatala.izenburuaeu }}
                    {% else %}
                        {{ azpiatala.kodea }}.-{{ azpiatala.izenburuaes }}
                    {% endif %}
                </th>
                <tbody>
                    {% for p in azpiatala.parrafoak  if p.ezabatu!= 1 %}
                    <tr>
                        <td colspan="12" class="col-xs-12 text-justify">
                            {% if app.request.locale == 'eu'%}
                                {{ p.testuaeu | raw }}
                            {% else %}
                                {{ p.testuaes | raw }}
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}

                    {% for k in azpiatala.kontzeptuak  if k.ezabatu!= 1 %}
                    <tr>
                        <td class="col-md-9" colspan="9">
                            {% if app.request.locale == 'eu'%}
                                {{ k.kontzeptuaeu }} {% if k.baldintza %}( {{ k.baldintza.baldintzaeu }} ){% endif %}
                            {% else %}
                                {{ k.kontzeptuaes }} {% if k.baldintza %}( {{ k.baldintza.baldintzaes }} ){% endif %}
                            {% endif %}
                        </td>
                        <td class="col-md-3 text-nowrap" colspan="3">
                            {{ k.kopurua }} {{ k.unitatea }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        {% endfor %}
    {% endfor %}

    <div id="loading" style="display:none;">
        <p><img src="{{ asset('bundles/app/img/loading.svg') }}" /> Kargatzen...</p>
    </div>
{% endblock %}


