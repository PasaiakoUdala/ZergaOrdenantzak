{% extends 'base.html.twig' %}


{% block navright %}
    <ul class="nav navbar-nav navbar-right">
        {#<li><a href="{{ path('exportatu', {'id': ordenantza.id}) }}"> Exportatu <span class="sr-only">(current)</span></a></li>#}
        {% if  app.request.locale == "eu"%}
            <li><a href="{{ path('hizkuntza_aldatu') }}"><img src="{{ asset('bundles/app/img/espanol.png') }}" alt="Castellano"> Castellano</a></li>
        {% else %}
            <li><a href="{{ path('hizkuntza_aldatu') }}"><img src="{{ asset('bundles/app/img/euskara.png') }}" alt="Euskaraz"> Euskara</a></li>
        {% endif %}
        <li>&nbspp;</li>
    </ul>
{% endblock %}

{% block body %}
    <div class="containermenua">,
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

            {% for ordenantza in ordenantzas %}

                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne{{ loop.index }}" aria-expanded="true" aria-controls="collapseOne{{ loop.index }}">
                                {% if  app.request.locale == "eu"%}
                                    {{ ordenantza.kodea }} - {{ ordenantza.izenburuaeu |raw|escape }}
                                {% else %}
                                    {{ ordenantza.kodea }} - {{ ordenantza.izenburuaes |raw|escape }}
                                {% endif %}
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne{{ loop.index }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>

        $(document).ajaxStart(function(){
            $('#loading').show();
        }).ajaxStop(function(){
            $('#loading').hide();
        });

        $(document).ready(function () {

            $('.btnsubmenu').on("click", function (e) {
                e.preventDefault();
                $('#divSubmenu').empty();
                var miid = $(this).data('atalaid');
                var url = Routing.generate('admin_atalaparrafoa_new', {ordenantzaid: miid});
                $('#divSubmenu').load(url);
                $('#divSubmenu').modal('toggle');
            });
        });
    </script>
{% endblock %}